{
  "name": "SWISS Wallet",
  "short_name": "SWISS Wallet",
  "version": "0.1.8",
  "manifest_version": 2,
  "author": "https://www.swisscoinlab.ch/eql",
  "description": "SWISS wallet browser extension",
  "commands": {
    "_execute_browser_action": {
      "suggested_key": {
        "windows": "Alt+Shift+M",
        "mac": "Alt+Shift+M",
        "chromeos": "Alt+Shift+M",
        "linux": "Alt+Shift+M"
      }
    }
  },
  "icons": {
    "16": "images/icon-16.png",
    "48": "images/icon-48.png",
    "128": "images/icon-128.png"
  },
  "default_locale": "en",
  "background": {
    "scripts": [
      "chromereload.js",
      "background2.js",
      "background.js"
    ],
    "persistent": true
  },
  "browser_action": {
    "default_icon": {
      "16": "images/icon-16.png",
      "48": "images/icon-48.png"
    },
    "default_title": "SWISS Wallet"
  },
  "content_scripts": [
    {
      "matches": [
        "file://*/*",
        "http://*/*",
        "https://*/*"
      ],
      "js": [
        "contentscript.js"
      ],
      "run_at": "document_start",
      "all_frames": true
    }
  ],
  "permissions": [
    "storage",
    "unlimitedStorage",
    "clipboardWrite",
    "http://localhost:8545/",
    "https://*.infura.io/",
    "cookies",
    "https://*/*",
    "http://*/*",
    "tabs",
    "activeTab",
    "notifications"
  ],
  "web_accessible_resources": [
    "inpage.js",
    "popup.html",
    "chrome-extension://*"
  ],
  "externally_connectable": {
    "matches": [
      "https://metamask.io/*",
      "https://www.swisscoinlab.ch/*"
    ]
  }
}
